MenuButton := Rectangle { 
    property <string> button-text;
    property <length> x-text-offset;
    property <image> icon;
    height: 46phx;
    width: 300phx;

    ta := TouchArea {
        Rectangle { 
            background: ta.has-hover ? #12171d : #0d1016;
            animate background { duration: 0.2s; }
            height: 46phx;
            border-radius: 16phx;
            x: 15phx;
            Text {
                text: button-text;
                color: white;
                font-weight: 800;
                font-size: 16phx;
                x: x-text-offset;
                y: 14phx;
            }
            Image {
                x: 15phx;
                y: 12phx;
                source: icon;
                width: 21phx;
                height: 21phx;
                colorize: white;
             }
         }
    }
}

