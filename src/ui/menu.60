MenuButton := Rectangle { 
    property <string> button-text;
    property <length> x-text-offset;
    property <image> icon;
    height: 46px;
    width: 300px;

    ta := TouchArea {
        Rectangle { 
            background: ta.has-hover ? #12171d : #0d1016;
            animate background { duration: 0.2s; }
            height: 46px;
            border-radius: 16px;
            x: 15px;
            Text {
                text: button-text;
                color: white;
                font-weight: 800;
                font-size: 16px;
                x: x-text-offset;
                y: 14px;
            }
            Image {
                x: 15px;
                y: 12px;
                source: icon;
                width: 21px;
                height: 21px;
                colorize: white;
             }
         }
    }
}

