import { TopBar } from "./topbar.60";

Item := Rectangle {
    property <string> title;
    height: 150phx;

    ta := TouchArea {
        Rectangle { 
            border-radius: 12phx;
            height: 135phx;
            width: parent.width;
            clip: true;

            Image {
                height: 100%;
                width: parent.width;
                source: @image-url("../assets/devlog.jpg");
                image-fit: cover;
            }
            Rectangle {
                height: parent.height;
                width: parent.width;
                animate background { duration: 0.2s; }
                background: @linear-gradient(0deg, ta.has-hover ? #171b208d : #171b20dc 0%, transparent 95%);
            }
            VerticalLayout {
                padding: 10phx;
                alignment: end;
                Text {
                    text: title;
                    font-size: 20phx;
                    color: white;
                    font-weight: 800;
                    overflow: TextOverflow.elide;
                }
            }
        }
    }
}

News := Rectangle {
    background: #12171d;
    clip: true;

    VerticalLayout { 
        padding-left: 20phx;
        padding-right: 20phx;
        TopBar {}
        Rectangle { height: 15phx; }
        VerticalLayout { 
            Flickable {
                VerticalLayout { 
                    for data[i] in [
                        { text: "Aktualizacja #5 - 4 nowe linie i kilka bugfixów"},
                        { text: "Aktualizacja #4 - Dyżurny ruchu!"},
                        { text: "Aktualizacja #3 - Optymalizacja gameplay'u"},
                        { text: "Aktualizacja #2 - Początki trybu multiplayer, 3 nowe linie"},
                        { text: "Aktualizacja #1 - BABA BEZ NUG"},
                        { text: "Aktualizacja #0 - Lorem ipsum"},
                    ] : Item {
                        title: data.text;
                    }
                }
            }
        }    
    }
}